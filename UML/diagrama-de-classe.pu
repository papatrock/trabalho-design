@startuml diagrama-de-classe

class Espaco {
    - String localizacao
    - String tipo
    - String descricao
    - Int capacidade
    - Double preco
    - Fotos fotos

    + geters()
    + seters()

    + cadastrarEspaco()
    + atualizarEspaco()
    + deletarEspaco()
}

class Reserva {
    - Espaco espaco
    - Date dataInicial
    - Date dataFinal
    - Int CPFReserva

    + geters()
    + seters()

    + void reservarEspaco()
    + void cancelarReserva()
    + void verReserva()
    + void verEspacosVagos()
    + List<Espaco> EspacosFiltro()
}

